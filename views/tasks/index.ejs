<%- include ../shared/header %>
  <div class="row mt-4">
    <div class="offset-md-3 col-md-6">
      <h1>Task Items</h1>
      <hr />

      <ul class="list-group">
        <% for(var i=0; i<taskItems.length; i++) { %>
          <% if(taskItems[i].completed) { %>
          <li class="list-group-item font-italic list-group-item-light" style="text-decoration: line-through">
          <% } else { %>
          <li class="list-group-item">
          <% } %>
            <%=taskItems[i].title%>
            <a href="/tasks/delete/<%=taskItems[i]._id%>" class="btn btn-danger btn-sm float-right">Delete</a>
            <a 
              href="/tasks/status/<%=taskItems[i]._id%>" 
              class="btn <%=taskItems[i].completed ? 'btn-info' : 'btn-success'%> btn-sm float-right mr-1"
            >
              <%=taskItems[i].completed ? 'Undo' : 'Complete'%>
            </a>
          </li>        
        <% } %>
      </ul>
    </div>
  </div>
<%- include ../shared/footer%>